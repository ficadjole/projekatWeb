@using projekatWeb.DTOs;
@using projekatWeb.Models;
@model DodajJedinicuDto
@{
    ViewBag.Title = "DodajJedinicu";
}

<div class="container d-flex justify-content-center mt-4">
    <div class="col-lg-6">
        <div class="bg-dark bg-opacity-25 rounded py-3 px-4">
            <h3 class="text-center mb-4">Smeštajne jedinice</h3>

            <form action="~/Aranzman/KreirajJedinicu" method="post">
                <input type="hidden" name="idSmestaja" value="@Model.IdSmestaja" />
                <input type="hidden" name="idAranzmana" value="@Model.IdAranzmana" />
                <div class="card shadow-sm">
                    <div class="card-header text-center">
                        Smeštajna jedinica
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6 fw-bold">Cena jedinice: </dt>
                            <dd class="col-6">
                                <input type="number" class="form-control" name="CenaJedinice" min="10" max="1000" required/>
                            </dd>

                            <dt class="col-6 fw-bold">Maksimalan broj osoba: </dt>
                            <dd class="col-6">
                                <input type="number" class="form-control" name="MaksBrOsoba" min="1" max="8" required />
                            </dd>

                            <dt class="col-6 fw-bold">Pet friendly: </dt>
                            <dd class="col-6">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="PetFriendly" id="PetFriendlyDa" value="true" />
                                    <label class="form-check-label" for="PetFriendlyDa">Da</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="PetFriendly" id="PetFriendlyNe" value="false" checked />
                                    <label class="form-check-label" for="PetFriendlyNe">Ne</label>
                                </div>
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Dodaj smeštajnu jedinicu</button>
                </div>
            </form>
        </div>
    </div>
</div>


